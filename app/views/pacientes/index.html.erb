<h1>Listar Pacientes</h1>

<br />
<table class="table table-bordered table-striped">
  <tr>
    <th>Nome</th>
    <th>Data nascimento</th>
    <th>Idade</th>
    <th>Endereco</th>
    <th>Profissao</th>
    <th>Situacao profissional</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @pacientes.each do |paciente| %>
    <tr>
      <td><%= paciente.nome %></td>
      <td><%= paciente.data_nascimento %></td>
      <td><%= paciente.idade %></td>
      <td><%= paciente.endereco %></td>
      <td><%= paciente.profissao %></td>
      <td><%= paciente.situacao_profissional %></td>
      <td><%= link_to 'Detalhar', paciente, :class => "btn" %></td>
      <td><%= link_to 'Acompanhamento', new_acompanhamento_pacientes_path(:paciente_id => paciente.id), :class => "btn" %></td>
      <td><%= link_to 'Exames', new_resultado_exames_pacientes_path(:paciente_id => paciente.id), :class => "btn" %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'Criar Novo Paciente', new_paciente_path, :class => "btn btn-large" %>
